# 3-1
friends = ['kris', 'cade', 'tate']
print(friends[0])
print(friends[1])
print(friends[2])

# 3-2
message = "Hello there, "
print(message + friends[0].title() + ".")
print(message + friends[1].title() + ".")
print(message + friends[2].title() + ".")

# 3-3
motorcycles = ['honda', 'suzuki', 'kawasaki', 'aprilla', 'bmw', 'ducati']
print(f"I want an {motorcycles[3].title()} RS660.")
print(f"{motorcycles[2].title()} also has good bikes.")
print(f"{motorcycles[1].title()} bikes are fairly expensive.")