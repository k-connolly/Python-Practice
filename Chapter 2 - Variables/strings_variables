# 2-3
var_name = "Eric"
print ("Hello " + var_name + ", would you like to learn some Python today?")

# 2-4
var_first = "mason"
var_last = "holt"
var_full = f"{var_first} {var_last}"
print("Upper: " + var_full.upper())
print("Lower: " + var_full.lower())
print("Title: " + var_full.title())

# 2-5
print('Oscar Wilde once said, "Be yourself; everyone else is already taken."')

# 2-6
famous_person = "Oscar Wilde"
message = "Be yourself; everyone else is already taken."
spacer = '"'
print(f'{famous_person} once said, {spacer}{message}{spacer}')

# 2-7
strip_name = "\t\nKellen\t\n"
print("Raw String: " + strip_name) # Raw String Value
print("Left Strip: " + "'" + strip_name.lstrip() + "'") # Strips whitespace to the left of the string
print("Right Strip: " + "'" + strip_name.rstrip() + "'") # Strips whitespace to the right of the string
print("All Strip: " + "'" + strip_name.strip() + "'") # Strips all whitespace within the string